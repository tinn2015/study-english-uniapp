.my {
  height: 100vh;
}
.status_bar {
  height: 298rpx;
  width: 100%;
  color: red;
  background: linear-gradient(90deg, #59C47F 0%, #6BE7B7 100%);
}
.content {
  position: relative;
  width: 100vw;
  height: calc(100% - 298rpx);
  padding: 0 32rpx;
  box-sizing: border-box;
}
.content .panel {
  position: absolute;
  width: 686rpx;
  height: 204rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.05);
  border-radius: 24rpx;
  top: -64rpx;
  left: 50%;
  transform: translateX(-50%);
}
.content .panel .line {
  height: 120rpx;
  border-right: 1px solid #E5E4E9;
}
.content .panel .panel-title {
  font-size: 28rpx;
  font-family: AlibabaPuHuiTi-Regular, AlibabaPuHuiTi;
  font-weight: 400;
  color: #999A9F;
}
.content .panel .panel-info {
  margin-top: 24rpx;
  font-size: 32rpx;
  font-family: Roboto-Bold, Roboto;
  font-weight: bold;
  color: #202127;
}
.content .activity-tip {
  margin-top: 172rpx;
  background: #F4F5F7;
  border-radius: 16rpx;
  padding: 16rpx;
}
.content .activity-tip .horn {
  width: 32rpx;
  height: 32rpx;
}
.content .activity-tip .tip {
  font-size: 28rpx;
  font-family: AlibabaPuHuiTi-Regular, AlibabaPuHuiTi;
  font-weight: 400;
  color: #202127;
  margin-left: 4rpx;
}
.content .activity-tip .btn {
  background: #58C898;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: AlibabaPuHuiTi-Regular, AlibabaPuHuiTi;
  font-weight: 400;
  color: #FFFFFF;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  width: 144rpx;
}
.content .part-1 {
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 24rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 24rpx;
  margin-top: 32rpx;
  padding: 40rpx;
}
.content .part-1 .title {
  font-size: 40rpx;
  font-family: AlibabaPuHuiTi-Medium, AlibabaPuHuiTi;
  font-weight: 500;
  color: #202127;
}
.content .part-1 .label {
  margin-top: 46rpx;
  font-size: 28rpx;
  font-family: AlibabaPuHuiTi-Regular, AlibabaPuHuiTi;
  font-weight: 400;
  color: #999A9F;
}
.content .part-1 .btn {
  height: 96rpx;
  background: linear-gradient(90deg, #59C47F 0%, #6BE7B7 100%);
  border-radius: 60rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  margin-top: 32rpx;
}
.content .part-2 {
  margin-top: 16rpx;
}
.content .part-2 .item {
  margin-top: 48rpx;
}
.content .part-2 .label {
  margin-left: 32rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #202127;
}
.content .part-2 .icon {
  width: 44rpx;
  height: 44rpx;
}
.content .ft64 {
  font-size: 64rpx;
}